set ignorecase    " Do case insensitive matching
set smartcase     " Do smart case matching
set expandtab     " Use spaces when using tabs
set shiftwidth=4  " Number of spaces to use for each step of (auto)indent
set softtabstop=4 " Number of spaces that will be used to perform an  indent
set tabstop=4     " Number of spaces that will be used to perform a tab indent
set autoindent    " Copy indent from current line when starting a new line
set smartindent   " Do smart indent (equal { })
set number        " Show line numbers
